<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbarLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/return_main"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/return_to_main"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/return_main"
        android:background="@drawable/actionbar_icon"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/actionBarReturnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/logoImage"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/actionBarStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/actionBarReturnText"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</RelativeLayout>