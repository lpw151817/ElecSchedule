<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/mm_listitem"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:src="@drawable/default_user_avatar" />

    <TextView
        android:id="@+id/message_list_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head"
        android:padding="7dp"
        android:text="小黑"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/message_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:text="昨天 晚上"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_list_name_tv"
        android:layout_toRightOf="@id/head"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:id="@+id/message_list_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:text="一会儿见"
            android:textColor="@color/darkgray"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/message_list_new_tips_rl"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/message_list_tips_num_tv"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@drawable/new_tips_bg"
                android:gravity="center_horizontal"
                android:text="5"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>