<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingTop="2dp"
    android:background="@drawable/mm_listitem"
    android:clickable="true" >

    <ImageView
        android:id="@+id/phone_head_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/default_user_avatar" />

    <ImageView
        android:id="@+id/phone_status_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/phone_missed" />

    <TextView
        android:id="@+id/phone_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/phone_head_iv"
        android:padding="8dp"
        android:text="小黑 "
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_start_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_name_tv"
        android:layout_toRightOf="@+id/phone_head_iv"
        android:padding="8dp"
        android:text="2014-1-1"
        android:textColor="#666" />

    <TextView
        android:id="@+id/phone_is_answered_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_name_tv"
        android:layout_toRightOf="@+id/phone_start_time_tv"
        android:padding="8dp"
        android:text="未接通"
        android:textColor="#666" />
    <TextView
        android:id="@+id/phone_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_name_tv"
        android:layout_toRightOf="@+id/phone_is_answered_tv"
        android:padding="8dp"
        android:text="30秒"
        android:textColor="#666" />

</RelativeLayout>