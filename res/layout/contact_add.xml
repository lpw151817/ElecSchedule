<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@android:color/white"
	>
	<!-- 客户添加页面   -->
	<!-- 主题展示区 -->
	<ScrollView
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:fillViewport="true" 
	>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="440dp"
	    android:orientation="vertical"
	    android:background="#eee" >
		
		<LinearLayout
			android:layout_marginTop="10.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dp"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="姓  名:"/>
			<EditText
			android:id="@+id/customer_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_weight="1"
			android:layout_marginLeft="5dip"
			android:textSize="15.0dip"
			android:hint="不可为空"
			android:background="@drawable/edit_text"/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="手  机:"/>
			<EditText
			android:id="@+id/phoneNumber_mobile"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:layout_weight="1"
			android:layout_marginLeft="5dip"
			android:textSize="15.0dip"
			android:hint="不可为空"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="座  机:"/>
			<EditText
			android:id="@+id/phoneNumber"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:inputType="number"
			android:textSize="15.0dip"
			android:layout_marginLeft="5dip"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="邮  箱:"/>
			<EditText
			android:id="@+id/customer_email"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:singleLine="true"
			android:layout_marginLeft="5dip"
			android:textSize="15.0dip"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="住  址:"/>
			<EditText
			android:id="@+id/customer_address"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:singleLine="true"
			android:textSize="15.0dip"
			android:layout_marginLeft="5dp"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="单  位:"/>
			<EditText
			android:id="@+id/customer_unit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:singleLine="true"
			android:layout_marginLeft="5dp"
			android:textSize="15.0dip"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		<LinearLayout
			android:layout_marginTop="1.0px"
			android:layout_marginLeft="10.0px"
			android:layout_marginRight="10.0px"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:padding="5dip"
			android:background="@drawable/mm_listitem"
			android:gravity="center_vertical">
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@android:color/black"
			android:textSize="17.0dip"
			android:text="描  述:"/>
			<EditText
			android:id="@+id/customer_description"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:inputType="textMultiLine"
			android:layout_marginLeft="5dp"
			android:textSize="15.0dip"
			android:background="@drawable/edit_text"
			/>
		</LinearLayout>
		
	</LinearLayout>
	</ScrollView>
	
</LinearLayout>